{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block body %}
	<header class="header">
		<nav>
			<div class="logo">
				<img src="assets/logo.png"/>
			</div>
			<div class="buttons">
				<a href="{{ path('app_register') }}">
					<button>S'inscrire</button>
				</a>
				<a href="{{ path('app_login') }}">
					<button>Se connecter</button>
				</a>
			</div>
		</nav>
	</header>
	<div class="container">
		<form method="post" class="login-form">
			{% if error %}
				<div class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<h1 class="login-title">Se connecter</h1>

			<div>
				<label for="inputEmail">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
			</div>

			<div>
				<label for="inputPassword">Password</label>
				<input type="password" name="password" id="inputPassword" autocomplete="current-password" required>
			</div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="btn btn--form" type="submit">
				Se connecter
			</button>

			<p>Premi√®re visite sur MoodFlix ?
				<a href="{{ path('app_register') }}">Inscrivez-vous.
				</a>
			</p>
		</form>
	</div>

{% endblock %}
