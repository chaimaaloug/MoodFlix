{% extends 'base.html.twig' %}

{% block title %}Liste des films{% endblock %}

{% block body %}
<style>
    .page-list-movies { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .page-list-movies code { background: #F5F5F5; padding: 2px 6px; }
    .movie-card { background-color: #231244; color: #fff;}
    .movie-card h2 {font-size: 2em;}
</style>

<div class="page-list-movies">
    <h1>Liste des films</h1>

    {% for movie in movies %}
        <div class="movie-card">
            <img src="{{ movie.picture }}" alt="">
            <h2>{{ movie.title }}</h2>
            <p>{{ movie.description }}</p>
        </div>
    {% endfor %}

</div>
{% endblock %}
