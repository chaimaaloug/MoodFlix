<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
			| MoodFlix</title>
		{# <linkrel="stylesheet" href="{{ asset('css/normalize.css') }}"> #}
		{# <link rel="stylesheet" href="{{ asset('css/skeleton.css') }}"> #}
		<link rel="stylesheet" href="{{ asset('css/loginSignUpPage.css') }}">
		<link rel="stylesheet" href="{{ asset('css/movieDetail.css') }}">
		<link
		rel="stylesheet" href="{{ asset('css/homePage.css') }}">
		{#<link rel="stylesheet" href="{{ asset('css/bibliotheque.css') }}">#}
		<link rel="stylesheet" href="{{ asset('css/crudTable.css') }}">
		<link rel="stylesheet" href="{{ asset('css/utilities.css') }}">
		<link rel="icon" href="../assets/logo.png">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>

	<body>

		<header class="header">
			<nav>
				<a href="{{ path('app_home_page') }}" class="logo">
					<img src="../../assets/logo.png"/>
				</a>
				{% if is_granted('ROLE_ADMIN') and app.user  %}
					<div class="adminButtons">
						<a href="{{ path('app_mood_index') }}">
							Moods List
						</a>

						<a href="{{ path('app_movie_index') }}">
							Movies List
						</a>
					</div>
				{% endif %}

		{% if app.user %}
				<div class="buttons">
					<a href="{{ path('app_logout') }}">
						<button>Se d√©connecter</button>
					</a>
				</div>
		{% else %}
			<div class="buttons">
				<a href="{{ path('app_register') }}">
					<button>S'inscrire</button>
				</a>
				<a href="{{ path('app_login') }}">
					<button>Se connecter</button>
				</a>
			</div>
		{% endif %}
			</nav>
		</header>

		{% block body %}
		
		{% endblock %}
	</body>
</html>
