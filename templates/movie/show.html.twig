{% extends 'base.html.twig' %}

{% block title %}Movie
{% endblock %}

{% block body %}
	<h1>{{ movie.title }}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ movie.id }}</td>
			</tr>
			<tr>
				<img src="{{ movie.picture }}" alt="" width="150">
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ movie.description }}</td>
			</tr>
			<tr>
				<th>Date de parution</th>
				<td>{{ movie.date ? movie.date|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Vidéo</th>
				<td>
					<iframe width="150" src="{{ movie.urlVideo }}" title="" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
				</td>
			</tr>
		</tbody>
	</table>

	<a class="c-button" href="{{ path('app_movie_edit', {'id': movie.id}) }}">Mettre à jour</a>

	{{ include('movie/_delete_form.html.twig') }}
{% endblock %}
