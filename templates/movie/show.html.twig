{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
    <a href="{{ path('app_movie_index') }}">Retour à la bibliotheque</a>
    <h1>{{ movie.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ movie.description }}</td>
            </tr>
            <tr>
                <th>Date de parution</th>
                <td>{{ movie.date ? movie.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>video</th>
                <td>{{ movie.urlVideo }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ movie.picture }}</td>
            </tr>
        </tbody>
    </table>

    <a class="c-button" href="{{ path('app_movie_edit', {'id': movie.id}) }}">Mettre à jour</a>

    {{ include('movie/_delete_form.html.twig') }}
{% endblock %}
