{% extends 'base.html.twig' %}

{% block title %}Moods List
{% endblock %}

{% block body %}
	<section>
		<h1>Moods List</h1>
		<a href="{{ path('app_mood_new') }}">
			<button type="submit" style="padding:10px 15px; font-weight: 500; font-style: 15px; margin-bottom: 0.89rem; background-color:#536EE4; color: white; outline: none; border: none; font-size: 20px; font-weight: bold;">+ Ajouter un Mood</button>
		</a>
		<div class="tbl-header">
			<table cellpadding="0" cellspacing="0" border="0">
				<thead>
					<tr>
						<th>Id</th>
						<th>Name</th>
						<th>Emoji</th>
						<th>Description</th>
						<th>Actions</th>
					</tr>
				</thead>
			</table>
		</div>
		<div class="tbl-content">
			<table cellpadding="0" cellspacing="0" border="0">
				<tbody>
					{% for mood in moods %}
						<tr>
							<td>{{ mood.id }}</td>
							<td>{{ mood.name }}</td>
							<td class="emojie">{{ mood.emoji }}</td>
							<td>{{ mood.description }}</td>
							<td class="actions">
								<a href="{{ path('app_mood_edit', {'id': mood.id}) }}"><img src="https://img.icons8.com/3d-fluency/30/null/edit.png"/></a>
								{{ include('mood/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5">Aucun mood trouv√©</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</section>


{% endblock %}
